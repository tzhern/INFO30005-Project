<section id="login">
    <title>Login</title>

    <link rel="stylesheet" href="/customer/css/homepage.css">

    <form action="/customer/login" method="post">
        <div class="container">
            <section class='BG'></section>
            <section class='Info'>
                <a class="profile" href="/customer/profile"><i class="fas fa-user-alt"></i></a>
                <a href="/customer">
                    <div id="icon2"></div>
                </a>
                <div class="line"></div>
                {{#if error}}
                    <p id="errorMessage">{{this.error}}</p>
                {{/if}}
                <label for="emailAddress"><b>Email Address</b></label>
                <br>
                <input class="user-input" type="text" placeholder="Enter Username" name="emailAddress" required>
                <br>

                <label for="password"><b>Password</b></label>
                <br>
                <input class="user-input" type="password" placeholder="Enter Password" name="password" required>
                <br>

                <label class="user-checkbox">Remember me<input type="checkbox" checked="checked"
                        name="remember"></label>
                <br>

                <button onclick="clearCart();" id="loginButton" type="submit">Login</button>

            </section>
        </div>
    </form>


</section>

<script>
    function clearCart(){
        localStorage.removeItem('inCart');
        localStorage.removeItem('totalCost');
        localStorage.removeItem('cartNumbers');
        localStorage.setItem('cartCost', '0');
    }
</script>